<div class="site-width">

  <p id="notice"><%= notice %></p>

  <h1>Properties</h1>

  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Address</th>
        <th>Available</th>
        <th>Features</th>
        <th>Rate</th>
        <th>Pets</th>
        <th>Directions</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @properties.each do |property| %>
        <tr>
          <td><%= property.address %></td>
          <td><%= property.available %></td>
          <td><%= property.features %></td>
          <td><%= property.rate %></td>
          <td><%= property.pets %></td>
          <td><%= property.directions %></td>
          <td><%= link_to 'View', property, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_property_path(property), class: "btn btn-success" %></td>
          <td><%= link_to 'Destroy', property, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Property', new_property_path, class: 'btn btn-primary' %>
</div>
