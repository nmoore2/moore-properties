<%= form_for(property) do |f| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>
      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row input-wrapper">
  <div class="col-sm-6">
      <div class="col-xs-12 col-sm-2">
        <%= f.label :title %>
      </div>
      <div class="col-xs-12 col-sm-10">
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="col-xs-12 col-sm-2">
        <%= f.label :address %>
      </div>
      <div class="col-xs-12 col-sm-10">
        <%= f.text_field :address, class: 'form-control'  %>
      </div>
      <div class="col-xs-12 col-sm-2">
        <%= f.label :available %>
      </div>
      <div class="col-xs-12 col-sm-1">
        <%= f.check_box :available %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <%= f.label :visible, 'Hidden on site', class: 'no-wrap'%>
      </div>
      <div class="col-xs-12 col-sm-6" style="padding-left: 0;">
        <%= f.check_box :visible %>
      </div>
      <div class="clearfix"></div>
      <div class="col-xs-12 col-sm-2">
        <%= f.label :features %>
      </div>
      <div class="col-xs-12 col-sm-10">
        <%= f.text_area :features, class: 'form-control'  %>
      </div>
      <div class="col-xs-12 col-sm-2">
        <%= f.label :rate %>
      </div>
      <div class="col-xs-12 col-sm-10">
        <%= f.text_field :rate, class: 'form-control' %>
      </div>
      <div class="col-xs-12 col-sm-2">
        <%= f.label :pets %>
      </div>
      <div class="col-xs-12 col-sm-10">
        <%= f.text_field :pets, class: 'form-control'  %>
      </div>
      <div class="col-xs-12 col-sm-2">
        <%= f.label :directions %>
      </div>
      <div class="col-xs-12 col-sm-10">
        <%= f.text_area :directions, class: 'form-control' %>
      </div>
      <div class="col-xs-12">
        <div class="actions">
          <a class='btn btn-success' >
            <%= f.submit %>
          </a>
        </div>
      </div>
    </div>
    <% end %>
    <div class="col-sm-6">
      <% if action_name == 'edit' %>
        <%= simple_form_for(@image) do |m| %>
          <div class="field">
            <%= m.input :property_id, as: :hidden, input_html: { value: @property.id }  %>
            <%= m.input :image, as: :file, label: 'Upload Image' %>
          </div>
          <div class="actions">
            <%= m.button :submit, value: 'Upload', class: 'btn btn-sm btn-success' %>
          </div>
        <% end %>
        <% if !@property.images.empty? %>
          <% @property.images.each do |image| %>
            <div class="col-sm-4">
              <% if !image.image.to_s.empty? %>
                <%= cl_image_tag image.image, class: 'img-thumbnail' %>
              <% else %>
                <%= image_tag 'broken-img.svg', class: 'img-thumbnail' %>
              <% end %>
              <%= link_to ' X ', image_path(image), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger destroy-img' %>
            </div>
          <% end %>
        <% end %>
      <% end %>
      </div>
  </div>
