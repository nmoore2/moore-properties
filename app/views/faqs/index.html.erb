<div clas="row">

<div class="site-width">

  <h1>FAQs</h1>
  <%= link_to 'New FAQ', new_faq_path, class: 'btn btn-primary new-item-btn' %>
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Question</th>
        <th>Answer</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @faqs.each do |faq| %>
        <tr>
          <td><%= faq.question %></td>
          <td><%= raw faq.answer %></td>
          <td><%= link_to 'View', faq, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_faq_path(faq), class: "btn btn-success" %></td>
          <td><%= link_to 'Delete', faq, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New FAQ', new_faq_path, class: 'btn btn-primary' %>
</div>
</div>
