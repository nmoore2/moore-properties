<%= simple_form_for(faq) do |f| %>
  <% if faq.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(faq.errors.count, "error") %> prohibited this faq from being saved:</h2>

      <ul>
      <% faq.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :question %>
    <%= f.text_field :question, class: 'form-control' %>
  </div>
  <br />
  <div class="field">
    <%= f.input :answer, as: :ckeditor, input_html: {class: "form-control input-sm", toolbar: 'mini'} %>
  </div>

  <div class="actions">
    <a class="btn btn-primary">
      <%= f.submit  %>
    </a>
  </div>
<% end %>
