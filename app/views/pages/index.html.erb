
<div class="row main-content">
  <div class="col-xs-12 col-sm-4">

      <h1>Pages</h1>

      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>Title</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody>
          <% @pages.each do |page| %>
            <tr>
              <td><%= page.title %></td>
              <td><%= link_to 'Edit', edit_page_path(page), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    <br/>
    </div>

</div>
