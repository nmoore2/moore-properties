<h2>Change your password</h2>

<div class="row">
  <div class="col-sm-4">

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: 'form-control' } %>
        <%= f.input :password_confirmation, label: "Confirm your new password", required: true, input_html: { class: 'form-control' } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Change my password" , class: 'btn btn-success', style: 'margin: 10px 0;' %>
      </div>
    <% end %>

  </div>
</div>

<%= render "devise/shared/links" %>
